@model Tuple<Project.Models.Craft , IEnumerable<Project.Models.Testimonial>>

@{
    ViewData["Title"] = "EditCraft";
    Layout = "~/Views/Shared/_VendorLayout.cshtml";
    ViewBag.n = ViewBag.userVendor;
}
<html>
    <head>
    <link rel="stylesheet" href="~/ForAdmin/Dashboard/vendor/bootstrap/css/bootstrap.min.css">
    <link href="~/ForAdmin/Dashboard/vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/ForAdmin/Dashboard/libs/css/style.css">
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link rel="stylesheet" href="~/Craft/Create/style.css" />
<link rel="stylesheet" href="~/Craft/Edit/style.css" />
<script src="~/craft/create/javascript.js"></script>
    <link rel="stylesheet" href="~/ForAdmin/Dashboard/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <link rel="stylesheet" href="~/ForAdmin/Dashboard/vendor/charts/chartist-bundle/chartist.css">
    <link rel="stylesheet" href="~/ForAdmin/Dashboard/vendor/charts/morris-bundle/morris.css">
    <link rel="stylesheet" href="~/ForAdmin/Dashboard/vendor/fonts/material-design-iconic-font/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/ForAdmin/Dashboard/vendor/charts/c3charts/c3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/ForAdmin/Dashboard/vendor/fonts/flag-icon-css/flag-icon.min.css">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

    <link rel="stylesheet" href="~/ab/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/ab/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/4.5.6/css/ionicons.min.css">
    <link rel="stylesheet" href="~/ab/css/style.css">
<!------ Include the above in your HEAD tag ---------->
</head>


<style>

    .testimony-wrap .quote i {
        font-size: 40px;
        color: #0062cc;
    }

</style>

<body>
<div class="container emp-profile">
    <form asp-action="EditCraft"  enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                        <img id="imageResult" src=@Url.Content("~/Images/" +Model.Item1.Imagepath) alt="" class="img-fluid rounded shadow-sm mx-auto d-block" style="object-fit: cover;">
               
                    <div class="file btn btn-lg btn-primary">
                        Change Photo

                        <input asp-for="Item1.ImageFile" id="upload"  type="file" onchange="readURL(this);" class="form-control border-0" />
                        <span asp-validation-for="Item1.ImageFile" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                    
                        <div class="card border-3 border-top border-top-primary">
                            <div class="card-body">
                                <h5 class="text-muted">Sales</h5>
                                <div class="metric-value d-inline-block">
                                <h1 class="mb-1">@Model.Item1.Sales</h1>
                                </div>
                                <div class="metric-label d-inline-block float-right text-success font-weight-bold">
                                    <span class="icon-circle-small icon-box-xs text-success bg-success-light"><i class="fas fa-user-alt"></i></span><span class="ml-1"></span>
                                </div>
                            </div>
                        </div>
                    
            </div>
                <div class="col-md-3">

                    <div class="card border-3 border-top border-top-primary">
                        <div class="card-body">
                            <h5 class="text-muted">Amount earned</h5>
                            <div class="metric-value d-inline-block">
                                <h1 class="mb-1">$@(String.Format("{0:0.00}", (Model.Item1.Sales * Model.Item1.Price)))</h1>
                            </div>
                            <div class="metric-label d-inline-block float-right text-success font-weight-bold">
                                <span class="icon-circle-small icon-box-xs text-success bg-success-light"><i class="fa fa-dollar"></i></span><span class="ml-1"></span>
                            </div>
                        </div>
                    </div>

                </div>
            <div class="col-md-2">
                <input type="submit" class="profile-edit-btn" name="btnAddMore" value="Save Edit" />
            </div>
        </div>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<input type="hidden" asp-for="Item1.Id" />
            <div class="col-md-8">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab" style="margin-left: 60px;">
                        <div class="row" style="margin-bottom: 20px;">
                            <div class="col-md-6">
                                <label>Name :</label>
                            </div>
                            <div class="col-md-6">
                                    <input asp-for="Item1.Name" placeholder="Name" class="form-control" />
                                    <span asp-validation-for="Item1.Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 20px;">
                            <div class="col-md-6">
                                <label>Category Name :</label>
                            </div>
                            <div class="col-md-6">
                                    <select asp-for="Item1.CategoryId" class="form-control" asp-items="ViewBag.catid"></select>
                                    <span asp-validation-for="Item1.CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 20px;">
                            <div class="col-md-6">
                                <label>Price :</label>
                            </div>
                            <div class="col-md-6">
                                    <input asp-for="Item1.Price" class="form-control" />
                                    <span asp-validation-for="Item1.Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 20px;">
                            <div class="col-md-6">
                                <label>Description :</label>
                            </div>
                            <div class="col-md-4">
                                    <textarea asp-for="Item1.Description" rows="4" cols="50">Enter text here...</textarea>
                                    <span asp-validation-for="Item1.Description" class="text-danger"></span>
                            </div>                            
                        </div>
                       
                    </div>
                    
                </div>
            </div>
        </div>
    </form>
        @using (Html.BeginForm("DeleteCrafts", "Vendor", FormMethod.Post))
        {
            <div class="col-md-4" style="margin-left:auto">

                <input type="hidden" name="Id" value="@Model.Item1.Id" />
                <button type="submit" style="padding: 14px 40px; background-color: #f44336;">Delete</button>

            </div>
        }
        <div class="row">
            <div class="col-md-12">

                <section class="ftco-section">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="featured-carousel owl-carousel">
                                    @if (Model.Item2.Count() != 0)
                                    {
                                        @foreach (var item in Model.Item2)
                                        {
                                            <div class="item">
                                                <div class="testimony-wrap d-flex">
                                                    <div class="user-img" style="background-image: url('/Images/@item.User.Imagepath')">
                                                    </div>
                                                    <div class="text pl-4">
                                                        <span class="quote d-flex align-items-center justify-content-center">
                                                            <i class="ion-ios-quote"></i>
                                                        </span>
                                                        <p>@item.Coomment</p>
                                                        <p class="name">@item.User.Fname @item.User.Lname</p>
                                                        <span class="position" style="color: #0062cc;">@item.User.Username</span>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div>There is no Comments</div>

                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </section>





            </div>

        </div>
    </div>



    <script src="~/ab/js/jquery.min.js"></script>
    <script src="~/ab/js/popper.js"></script>
    <script src="~/ab/js/bootstrap.min.js"></script>
    <script src="~/ab/js/owl.carousel.min.js"></script>
    <script src="~/ab/js/main.js"></script>
</body>
</html>