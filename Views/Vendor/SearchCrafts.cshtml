            <style>
                .btn {
                    border: 1px solid black;
                    background-color: white;
                    color: black;
                    padding: 10px 24px;
                    font-size: 12px;
                    cursor: pointer;
                    margin-left: 18px;
                    margin-bottom: 10px;
                }

                .success {
                    border-color: #04AA6D;
                    color: green;
                }

                    .success:hover {
                        background-color: #04AA6D;
                        color: white;
                    }
            </style>
            <button type="button" class="btn success" onclick="@("window.location.href='" + @Url.Action("CreateCrafts", "Vendor") + "'");">Create Crafts</button>
            <div class="row justify-content-center text-center">
                <div class="col-md-8 col-lg-6">
                    <div class="header">
                        <h3> Crafts </h3>
                        <h2>All Category Products</h2>
                    </div>
                </div>
            </div>

            @using (Html.BeginForm("SearchCrafts", "Vendor", FormMethod.Post))
            {
                <p>
                    Name  : @Html.TextBox("SearchName")<br />
                    <input type="submit" value="Search" />
                </p>
            }


            <h1> Quilting :</h1>

            <div class="row" style="margin-top: 20px; margin-bottom: 20px">
                @{
                    var count1 = 0;
                }
                @foreach (var item in Model)
                {
                    if (item.CategoryId == 1)
                    {
                        <div class="col-md-6 col-lg-4 col-xl-3 shadow p-3 mb-5 bg-white rounded" style="border-radius: 5%;margin-left: 70px; margin-bottom: 40px;">
                            <div id="product-1" class="single-product">
                                <div class="part-1" style="margin-bottom: 5px;">

                                    <img src=@Url.Content("~/Images/"+item.Imagepath) asp-append-version="true" alt="" class="part-1::before;" style=" width: 100%; height: 19vw; object-fit: cover;" />
                                    <ul>
                                        <li><a href="#"><i class="fas fa-cart-plus"></i></a></li>
                                        <li><a href="#"><i class="fa fa-info"></i></a></li>

                                    </ul>
                                </div>
                                <div class="part-2">
                                    <h3 class="product-title">@item.Name</h3>
                                    <h4 class="product-price">Price : @item.Price</h4>
                                </div>
                            </div>
                        </div>
                        count1++;
                    }
                }
                @if (count1 == 0)
                {
                    <p style="margin-top: 40px; margin-bottom: 40px;">There is no Crafts</p>
                }
            </div>


