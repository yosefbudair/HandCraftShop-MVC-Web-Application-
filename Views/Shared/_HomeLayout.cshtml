<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/Assests/img/favicon.png" rel="icon">
    <link href="~/Assests/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,600,600i,700,700i,900" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Assests/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/Assests/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/Assests/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Assests/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Assests/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Assests/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Assests/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Footer/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Footer/css/style.css">
    <!-- Template Main CSS File -->
    <link href="~/Assests/css/style.css" rel="stylesheet">
</head>
<body>

    <header id="header" class="d-flex align-items-center">
        <div class="container d-flex align-items-center">

            <div class="logo me-auto">
                <h1><a href="#">HandCraft</a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <a href="index.html"><img src="~/Assests/img/logo.png" alt="" class="img-fluid"></a>-->
            </div>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto" asp-action="Index" asp-controller="Home">Home</a></li>
                    <li><a class="nav-link scrollto" asp-action="Crafts" asp-controller="Home">Crafts</a></li>
                    <li><a class="nav-link scrollto" asp-action="Login" asp-controller="LoginandRegistration">Profile</a></li>
                    <li><a class="nav-link scrollto" asp-action="About" asp-controller="Home">Contact Us</a></li>
                    <li><a class="nav-link scrollto" asp-action="Login" asp-controller="LoginandRegistration"><img src="~/Images/user.png" alt="Profile" class="rounded-circle" height="30px" width="30px" style="margin-right:5px">Login</a></li>


                    
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header>


    <div>
        @RenderBody()
    </div>


    <footer class="footer-07">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-12 text-center">
                    <h2 class="footer-heading"><a href="#" class="logo">HandCraft.com</a></h2>
                    <p class="menu">
                        <a asp-action="Index" asp-controller="Home">Home</a>
                        <a asp-action="Crafts" asp-controller="Home">Crafts</a>
                        <a asp-action="About" asp-controller="Home">About Us</a>
                        <a asp-action="Login" asp-controller="LoginandRegistration">Login</a>
                        <a asp-action="Register" asp-controller="LoginandRegistration">Sign Up</a>
                    </p>
                    <ul class="ftco-footer-social p-0">
                        <li class="ftco-animate"><a href="#" data-toggle="tooltip" data-placement="top" title="Twitter"><span class="ion-logo-twitter"></span></a></li>
                        <li class="ftco-animate"><a href="#" data-toggle="tooltip" data-placement="top" title="Facebook"><span class="ion-logo-facebook"></span></a></li>
                        <li class="ftco-animate"><a href="#" data-toggle="tooltip" data-placement="top" title="Instagram"><span class="ion-logo-instagram"></span></a></li>
                    </ul>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-md-12 text-center">
                    <p class="copyright">
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved |  <i class="ion-ios-heart" aria-hidden="true"></i> by <a asp-action="Index" asp-controller="Home" target="_blank">HandCraft</a>
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    </p>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/Footer/js/jquery.min.js"></script>
    <script src="~/Footer/js/popper.js"></script>
    <script src="~/Footer/js/bootstrap.min.js"></script>
    <script src="~/Footer/js/main.js"></script>



    <script src="~/Assests/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/Assests/vendor/aos/aos.js"></script>
    <script src="~/Assests/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Assests/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/Assests/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Assests/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/Assests/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Assests/js/main.js"></script>
</body>
</html>
