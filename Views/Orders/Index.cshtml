@model IEnumerable<Project.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numpieces)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dateorders)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Craft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numpieces)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dateorders)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Craft.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Passwordd)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
