
@model  string
@{
    Layout = null;
    ViewData["Title"] = "Credit";
}


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
<section class="p-4 p-md-5" style=" background-image: url(https://mdbcdn.b-cdn.net/img/Photos/Others/background3.webp);">

    <div class="row d-flex justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-5">
            <div class="card rounded-3">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h3>Checkout</h3>
                        <h6>Payment</h6>
                    </div>
                    <div class="px-3 py-4 border border-primary border-2 rounded mt-4 d-flex justify-content-between">
                        <div class="d-flex flex-row align-items-center">
                            <img src="https://i.imgur.com/S17BrTx.webp" class="rounded" width="60" />
                            <div class="d-flex flex-column ms-4" style="margin-left: 15px;">
                                <span class="h5 mb-1">Total Price</span>
                                <span class="small text-muted">Include Price Craft and Deliarey</span>
                            </div>
                        </div>
                        <div class="d-flex flex-row align-items-center">
                            @{
                                var text = Model;
                            }

                            <span class="h2 mx-1 mb-0"> @text </span>
                            
                                
                            
                            <sup class="dollar font-weight-bold text-muted">$</sup>
                            

                        </div>
                    </div>
                    <form asp-action="Credit" enctype="multipart/form-data">
                        

                        <div class="d-flex flex-row align-items-center mb-4 pb-1">
                            <img class="img-fluid" src="https://img.icons8.com/color/48/000000/mastercard-logo.png" />
                            <div class="flex-fill mx-3">
                                <div class="form-outline">
                                    <label class="form-label" for="formControlLgXc">Card Number : </label>
                                    <input type="text" id="formControlLgXc" class="form-control form-control-lg"
                                           name="cardnumber" placeholder="**** **** **** ****" required />
                                </div>
                                dont forget space between four numbers
                            </div>                            
                        </div>                      

                        <div class="form-outline mb-4">
                            <label class="form-label" for="formControlLgXsd">Cardholder's Name</label>
                            <input type="text" id="formControlLgXsd" class="form-control form-control-lg"
                                   name="cardname" placeholder="Cardholder's Name" required />
                        </div>

                        <div class="row mb-4">
                            
                            <div class="col-6">
                                <div class="form-outline">
                                    <label class="form-label" for="formControlLgExpk">Expire</label>
                                    <input type="password" id="formControlLgExpk" class="form-control form-control-lg"
                                           name="expire" placeholder="MM/YYYY" required />
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-outline">
                                    <label class="form-label" for="formControlLgcvv">Cvv</label>
                                    <input type="number" id="formControlLgcvv" class="form-control form-control-lg"
                                           name="cvv" placeholder="Cvv" required/>
                                </div>
                            </div>
                        </div>
                        <div class="form-wrapper" style="margin-top:10px; color:red; display: flex; 	justify-content: center;">
                            <p>@ViewBag.error</p>
                        </div>
                        
                        <button class="btn btn-success btn-lg btn-block">Add card</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
